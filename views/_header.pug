header.header
    nav.nav.nav--tours
        a.nav__el(href='/' tabindex=-1) All tours
    .header__logo
        img(src='/img/logo-white.png' alt='Explorify logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout#logout Log Out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Login
            a.nav__el.nav__el-cta(href='/signup') Sign Up